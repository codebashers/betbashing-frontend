<div class="page--matchday">


  <div class="ui breadcrumb">
    <a class="section">Leagues</a>
    <span class="divider">/</span>
    <a class="section">
      <img class="club-logo" src="/logos/{{model.matches.firstObject.match_comp}}.svg.png" alt="">
      Premier League
    </a>
    <span class="divider">/</span>
    <a class="section">2015/2016</a>
    <span class="divider">/</span>
    <div class="active section">{{model.id}}</div>
  </div>


  {{#each model.matches as |match|}}

    <div class="ui card match">

      <div class="content match__header">

        <div class="flex-container">
          <div class="" style="text-align:right">
            <span class="teamname">{{match.match_localteam_name}}</span>
            <img class="club-logo" src="/logos/{{match.match_localteam}}.svg.png" alt="">
          </div>
          <div class="score" style="text-align:center;">
            <span class="score {{if (not-eq match.match_status 'FT') 'live'}}">

              {{match.match_localteam_score}} <span class="dots">:</span> {{match.match_visitorteam_score}}
            </span>
          </div>
          <div class="">
            <img class="club-logo" src="logos/{{match.match_visitorteam}}.svg.png" alt="">
            <span class="teamname">{{match.match_visitorteam_name}}</span>
          </div>
        </div>

      </div>

      <div class="content match-events">

        {{#each match.events as |event|}}
          <div class="flex-container">
            <div class="" style="text-align:right">
              {{#if (eq event.event_team 'localteam')}}
                {{#if (eq event.event_type 'goal')}}
                  <span class="event-result">{{event.event_result}}</span>
                {{/if}}
                <span class="player-name">{{event.event_player}}</span>
                <div class="icon-wrap"><i class="icon {{event.event_type}}"></i></div>
              {{/if}}
              {{#if (eq event.event_team 'visitorteam')}}
                {{event.event_minute}}'
              {{/if}}
            </div>
            <div class="score" style="text-align:center;">

            </div>
            <div class="">
              {{#if (eq event.event_team 'localteam')}}
                {{event.event_minute}}'
              {{/if}}
              {{#if (eq event.event_team 'visitorteam')}}
                <div class="icon-wrap"><i class="icon {{event.event_type}}"></i></div>
                <span class="player-name">{{event.event_player}}</span>
                {{#if (eq event.event_type 'goal')}}
                  <span class="event-result">{{event.event_result}}</span>
                {{/if}}
              {{/if}}
            </div>
          </div>
        {{/each}}

        {{#if (eq match.match_status 'FT')}}
          <div class="flex-container">
            <div></div>
            <div class="fulltime">FT</div>
            <div></div>
          </div>
        {{/if}}

      </div>

      <div class="content">
        <div class="ui secondary menu">
          <a class="active item">
            Bets
          </a>
          <a class="item">
            <i class="icon comments"></i> Comments
          </a>
          <div class="right menu">

            {{#ui-popup hoverable="true"}}
              <button class="ui button basic small">Make your Bet</button>
            {{/ui-popup}}

            <div class="ui flowing popup bottom left transition hidden">

              <p style="white-space:nowrap;">

                <div class="ui input">
                  <input type="number" class="ui fluid input new-bet__score new-bet__localteam_score">
                </div>
                <span class="versus">:</span>
                <div class="ui input">
                  <input type="number" class="ui fluid input new-bet__score new-bet__visitorteam_score">
                </div>

              </p>

              <div class="ui button green fluid">Save</div>

            </div>

          </div>
        </div>
      </div>

      <div class="content match__bets">

        {{#if match.bets}}

          <div class="ui middle horizontal relaxed list">

            {{#each match.bets as |bet|}}

              {{#user-bet data-title="bet.user.username" data-content="bet.user.points" data-variation="inverted mini" popup=""}}
                {{bet.body}}
              {{/user-bet}}

            {{/each}}

          </div>

        {{else}}

          <p>There are no Bets for this Match.</p>

        {{/if}}

      </div>

    </div>

  {{/each}}


</div>
