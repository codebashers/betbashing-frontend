<div class="page--matchday">


  <div class="ui breadcrumb">
    <a class="section">Leagues</a>
    <span class="divider">/</span>
    <a class="section">
      <img class="club-logo" src="/logos/{{model.matches.firstObject.match_comp}}.svg.png" alt="">
      Premier League
    </a>
    <span class="divider">/</span>
    <a class="section">2015/2016</a>
    <span class="divider">/</span>
    <div class="active section">
      <div class="ui inline dropdown">
        <div class="text">Matchday {{model.id}}</div>
        <i class="dropdown icon"></i>
        <div class="menu">
          <div class="header">Adjust time span</div>
          <div class="active item" data-text="today">Today</div>
          <div class="item" data-text="this week">This Week</div>
          <div class="item" data-text="this month">This Month</div>
        </div>
      </div>
    </div>
  </div>


  {{#each model.matches as |match|}}

    <div class="ui card match">

      <div class="content match__header">

        <div class="flex-container">
          <div class="" style="text-align:right">
            <span class="teamname">{{match.match_localteam_name}}</span>
            <img class="club-logo" src="/logos/{{match.match_localteam}}.svg.png" alt="">
          </div>
          <div class="score" style="text-align:center;">
            <span class="score {{if (not-eq match.match_status 'FT') 'live'}}">
              <input type="number" name="localteam_score"> <span class="dots">:</span> <input type="number" name="visitorteam_score">
            </span>
          </div>
          <div class="">
            <img class="club-logo" src="logos/{{match.match_visitorteam}}.svg.png" alt="">
            <span class="teamname">{{match.match_visitorteam_name}}</span>
          </div>
        </div>

      </div>

      <div class="content" style="text-align:center;">

        {{#if match.bets}}

          <div class="ui small horizontal list">

            {{#each match.bets as |bet|}}

              <div class="item bet {{bet.bet_state}}">
                <img class="ui avatar image" src="/avatars/{{bet.user.id}}.jpg">
                <div class="content">
                  <div class="header">{{bet.bet_localteam_score}} : {{bet.bet_visitorteam_score}}</div>
                </div>
              </div>

              <div class="ui flowing small popup bottom left transition">
                <a href=""><b>{{bet.user.username}}</b> </a>
                <i class="star icon"></i>{{bet.user.points}}
              </div>

            {{/each}}

          </div>

        {{else}}

          <p>There are no Bets for this Match.</p>

        {{/if}}

      </div>

